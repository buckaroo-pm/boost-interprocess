  name = 'doc-complex-map',
  srcs = [
    'doc_complex_map.cpp',
  ],
  deps = [
    '//:interprocess',
  ],
  platform_deps = [
    ('linux.*', [ ':pthread', ':rt' ]),
  ],
)
